<!--pages/project/add/operation.wxml-->
<view class='container'>
     <form bindsubmit='formSubmit' bindreset='formReset'>
          <view class='row'>
               <text>项目名称：</text>
               <input type='text' name='projectName' placeholder='请输入项目名称' value="{{projectName}}" focus='true' />
          </view>
          <view class='row'>
               <text>项目类型：</text>
               <input type='text' name='projectType' placeholder='请输入项目类型' value='{{projectType}}' />
          </view>
          <view class='row'>
               <button type='primary' form-type='submit'> 提交</button>
               <button type='primary' form-type=' reset'>清空</button>
          </view>
     </form>
</view>